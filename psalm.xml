<?xml version="1.0"?>
    <!-- checkForThrowsDocblock="true" -->
    <!-- errorLevel: 1 is the strictest, usuall use 3 -->
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    cacheDirectory="tmp/cache/psalm"
    findUnusedBaselineEntry="true"
    findUnusedCode="true"
    autoloader="src/vendor/autoload.php"
    
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>

    <!-- Load but don't analyze -->
    <extraFiles>
	<directory name="vendor/php-stubs/wordpress-stubs/" />
    </extraFiles>
    <!-- Load and analyze -->
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
		<directory name="vendor/php-stubs/wordpress-stubs/" />
        </ignoreFiles>
    </projectFiles>
    <stubs>
	<file name="vendor/php-stubs/wordpress-stubs/wordpress-stubs.php" />
	<file name="tests/phpstan/constants.php" />
    </stubs>
    <issueHandlers>
<!-- Remove can't concatenate with null, it's actually untrue since PHP automatically transforms null to empty -->
	<PossiblyNullOperand errorLevel="suppress" />
    </issueHandlers>
</psalm>




