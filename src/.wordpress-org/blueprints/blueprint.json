	},
	{
		"step": "wp-cli",
		"command": "wp post meta add 5 _lum_autotitle_perpost '1'"
	},
	{
		"step": "wp-cli",
		"command": "wp widget add block sidebar-1 1 --content='<!-- wp:lumiere/widget --><div class='wp-block-lumiere-widget'>Lumi√®re Movies</div><!-- /wp:lumiere/widget -->'"
	},
	{
		"step": "wp-cli",
		"command": "wp lum update_options admin --imdbautopostwidget=1"
	}
    ]
